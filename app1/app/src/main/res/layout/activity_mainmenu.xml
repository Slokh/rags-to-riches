<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADCC93"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/goGameModeActivity"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp"
            android:scaleType="centerInside"
            android:text="Game Modes"
            android:textAlignment="center"
            app:srcCompat="@drawable/android"
            tools:text="@string/Game_Modes"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="89dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Game Modes"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            android:typeface="normal"
            android:visibility="visible"
            tools:text="Game Modes"
            android:layout_marginBottom="68dp"
            android:layout_alignBottom="@+id/goGameModeActivity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ragstoricheslogo"
            android:layout_above="@+id/goGameModeActivity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>